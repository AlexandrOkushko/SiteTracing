@model IEnumerable<SiteTracing.Models.ViewModels.SearchHistoryVM>

@{
    ViewBag.Title = "Site Tracing";
}

<p>
    <h2>Site Tracing @Html.ActionLink("Search", "SearchQuery", "", new { @class = "btn btn-success btn-secondary" })</h2>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WebsiteAddress)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WebsiteAddress)
            </td>
            <td>
                @Html.ActionLink("Trace", "TracertRoute", new { id = item.Id }) |
                @Html.ActionLink("Erase from history", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>