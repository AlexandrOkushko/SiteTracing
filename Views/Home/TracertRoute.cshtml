@model IEnumerable<SiteTracing.Models.ViewModels.TraceDetailsVM>

@{
    ViewBag.Title = "Tracert Route";
}

<h2>Tracert Route</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<div>
    <hr />
    <h4>Min/Max will be here in the future</h4>
    <h7>Max ping on this IP: @Model.ToArray().OrderBy(x => x.Ping).ToList().Last().Ip</h7>
    <br />
    <h7>Min ping on this IP: @Model.ToArray().OrderBy(x => x.Ping).ToList().First().Ip</h7>
    <hr />

</div>
<table class="table table-striped table-bordered table-sm" class="position-sticky">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.SearchId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Ip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ping)
            </th>
            @*<th></th>*@
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.SearchId)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Ip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ping)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                </td>*@
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to main page", "Index")
</div>   